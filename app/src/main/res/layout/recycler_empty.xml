<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/im_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/len_100"
        android:maxHeight="@dimen/len_100"
        android:minWidth="@dimen/len_48"
        android:minHeight="@dimen/len_48"
        android:scaleType="centerInside"
        android:src="@drawable/no_data" />

    <TextView
        android:id="@+id/txt_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/len_16"
        android:layout_marginBottom="@dimen/len_16"
        android:hint="@string/data_empty"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />
</LinearLayout>