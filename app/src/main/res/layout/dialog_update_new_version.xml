<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/info_root"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="60.0dip"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="90.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_bg_type_9"
            android:orientation="vertical"
            android:paddingBottom="25.0dip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_version_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x200"
                android:layout_marginLeft="@dimen/x80"
                android:layout_marginBottom="@dimen/x100"
                android:text="版本号"
                android:padding="@dimen/x10"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_version_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x80"
                android:layout_marginBottom="@dimen/x80"
                android:layout_marginLeft="40.0dip"
                android:layout_marginRight="40.0dip"
                android:includeFontPadding="false"
                android:maxHeight="190.0dip"
                android:scrollbars="vertical"
                android:text="【新增】修复上版本中已知问题\n【新增】修复上版本中已知问题\n【新增】修复上版本中已知问题\n"
                android:textColor="#ff666666"
                android:textSize="15.0dip" />


            <TextView
                android:id="@+id/tv_update_confirm"
                android:layout_width="@dimen/x400"
                android:layout_height="40.0dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/x30"
                android:background="@drawable/update_bg"
                android:gravity="center"
                android:text="@string/updata_ok"
                android:textColor="#ffffffff"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/img_update_cancel"
        android:layout_width="@dimen/x60"
        android:layout_height="@dimen/x60"
        android:layout_marginTop="20.0dip"
        android:src="@drawable/update_close_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/info_root" />
</androidx.constraintlayout.widget.ConstraintLayout>