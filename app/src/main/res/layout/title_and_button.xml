<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rl_title"
    android:background="@color/white"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/x88"
    android:elevation="@dimen/len_2"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/image_title_back"
        android:background="@mipmap/ic_back"
        android:focusable="true"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x30"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/tv_title_left"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" />

    <TextView
        android:textSize="@dimen/x36"
        android:textColor="@color/textColor_333333"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/image_title_right"
        android:padding="@dimen/x20"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="@drawable/ic_touch_fg"
        android:src="@mipmap/icon_contact_add"
        android:scaleType="centerInside"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/x30"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/image_title_right2"
        android:padding="@dimen/x20"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/image_title_right"
        android:layout_centerVertical="true" />

    <TextView
        android:textSize="@dimen/x30"
        android:textColor="@color/textColor_333333"
        android:id="@+id/tv_title_right"
        android:padding="@dimen/x20"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

    <View
        android:id="@+id/line"
        android:background="@color/textColor_333333"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/x1"
        android:layout_below="@id/tv_title_left"
        android:layout_alignParentBottom="true" />
</RelativeLayout>